// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Megalist {
  // El ID de la playlist de Spotify es nuestra clave primaria. Es un String.
  id                String   @id
  
  // El ID del usuario de Spotify. Tambi√©n es un String.
  spotifyUserId     String
  
  // Un array con los IDs de las playlists de origen.
  sourcePlaylistIds String[]
  
  trackCount        Int

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("megalists")
}